<header data-controller="mobile-menu" class="relative z-30">
  <nav class="bg-white shadow" role="navigation" aria-label="Main Navigation">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <!-- Logo -->
        <div class="flex items-center">
          <%= link_to root_path, 
              class: "focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md", 
              aria: { label: "Return to homepage" } do %>
            <img src="<%= asset_path('TAM_color.png') %>" 
                 alt="TAM Logo" 
                 class="h-8 w-auto"
                 aria-hidden="true">
            <span class="sr-only">TAM Logo - Return to Homepage</span>
          <% end %>
        </div>

        <!-- Mobile Menu Button -->
        <button type="button"
                data-mobile-menu-target="button"
                data-action="mobile-menu#toggle"
                class="inline-flex items-center justify-center p-3 rounded-md text-gray-400 md:hidden hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                aria-controls="mobile-menu"
                aria-expanded="false"
                aria-haspopup="true">
          <span class="sr-only">Toggle navigation menu</span>
          <!-- Menu Open Icon -->
          <svg class="h-6 w-6" 
               xmlns="http://www.w3.org/2000/svg" 
               fill="none" 
               viewBox="0 0 24 24" 
               stroke="currentColor"
               aria-hidden="true">
            <path stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex md:items-center md:justify-between md:flex-1 md:ml-10">
          <nav aria-label="Primary Navigation">
            <ul class="flex space-x-4" role="menubar">
              <% navigation_links = [
                ['Help', help_path],
                ['How It Works', how_it_works_path],
                ['Eligibility', eligibility_path],
                ['Contact', contact_path]
              ] %>
              
              <% navigation_links.each do |text, path| %>
                <li role="none">
                  <%= link_to text, 
                      path,
                      class: "text-gray-700 hover:text-gray-900 px-4 py-3 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-indigo-500",
                      role: "menuitem" %>
                </li>
              <% end %>
            </ul>
          </nav>

          <!-- Auth Links -->
          <div class="flex items-center space-x-4">
            <% if current_user %>
              <div class="flex items-center space-x-4">
                <span class="text-gray-700 text-sm" aria-label="Welcome message">
                  Hello, <%= current_user.first_name %>
                </span>
                <%= link_to (case current_user
                    when Admin then admin_root_path
                    when Constituent then constituent_dashboard_path
                    when Evaluator then evaluator_dashboard_path
                    when Vendor then vendor_dashboard_path
                    end),
                    class: "px-4 py-2 rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
                    aria: { label: "Go to your dashboard" } do %>
                  Dashboard
                <% end %>
                <%= button_to sign_out_path,
                    method: :delete,
                    form: { class: "inline-block" },
                    class: "px-4 py-2 rounded-md text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                    aria: { label: "Sign out of your account" } do %>
                  Sign Out
                <% end %>
              </div>
            <% else %>
              <%= link_to 'Sign In',
                  sign_in_path,
                  class: "px-4 py-2 rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <%= link_to 'Sign Up',
                  sign_up_path,
                  class: "px-4 py-2 rounded-md text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div class="md:hidden" 
         id="mobile-menu" 
         data-mobile-menu-target="menu" 
         hidden
         role="menu"
         aria-orientation="vertical"
         aria-labelledby="mobile-menu-button">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <% navigation_links.each do |text, path| %>
          <%= link_to text,
              path,
              class: "block w-full text-left px-4 py-3 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md",
              role: "menuitem" %>
        <% end %>
      </div>

      <div class="pt-4 pb-3 border-t border-gray-200">
        <% if current_user %>
          <div class="px-4 py-2">
            <p class="text-base font-medium text-gray-800">
              Hello, <%= current_user.first_name %>
            </p>
            <%= link_to 'Dashboard',
                (case current_user
                when Admin then admin_root_path
                when Constituent then constituent_dashboard_path
                when Evaluator then evaluator_dashboard_path
                when Vendor then vendor_dashboard_path
                end),
                class: "mt-2 block w-full text-left px-4 py-3 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md",
                role: "menuitem" %>
            <%= button_to 'Sign Out',
                sign_out_path,
                method: :delete,
                class: "mt-1 block w-full text-left px-4 py-3 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md",
                role: "menuitem" %>
          </div>
        <% else %>
          <div class="px-4 space-y-1">
            <%= link_to 'Sign In',
                sign_in_path,
                class: "block w-full px-4 py-3 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md",
                role: "menuitem" %>
            <%= link_to 'Sign Up',
                sign_up_path,
                class: "block w-full px-4 py-3 text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded-md",
                role: "menuitem" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>