<div class="min-h-screen bg-gray-100 py-12">
      <div class="form-container max-w-4xl mx-auto">
        <div class="bg-white p-8 rounded shadow-md">
          <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-semibold">Upload Paper Application</h1>
            <div>
              <a href="<%= admin_applications_path %>"
                 class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                 data-turbo-frame="_top"
                 aria-label="Return to applications dashboard">
                Back to Dashboard
              </a>
            </div>
          </div>

          <% if flash[:alert] %>
            <div class="bg-red-100 border border-red-400 text-red-700 p-4 rounded mb-4" role="alert">
              <span><%= flash[:alert] %></span>
            </div>
          <% end %>

          <%= form_with(url: admin_paper_applications_path, method: :post, multipart: true,
            data: { controller: "paper-application form-validation applicant-type", "applicant-type-guardian-picker-outlet": "[data-controller='guardian-picker']" }) do |form| %>
            <!-- Applicant Type Selection -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded" data-applicant-type-target="radioSection" data-action="change->applicant-type#updateApplicantTypeDisplay">
              <legend class="text-lg font-medium">Who is this application for?</legend>
              <div class="space-y-2">
                <div class="flex items-center">
                  <input type="radio" id="applicant_is_adult" name="applicant_type" value="guardian" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" <%= 'checked' unless @show_create_guardian_form %> data-applicant-type-target="radio">
                  <label for="applicant_is_adult" class="ml-3 text-sm text-gray-700">An Adult (applying for themselves)</label>
                </div>
                <div class="flex items-center">
                  <input type="radio" id="applicant_is_minor" name="applicant_type" value="dependent" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" <%= 'checked' if @show_create_guardian_form %> data-applicant-type-target="radio">
                  <label for="applicant_is_minor" class="ml-3 text-sm text-gray-700">A Dependent (must select existing guardian in system or enter guardian's information))</label>
                </div>
              </div>
            </fieldset>
      <%= render 'self_application_fields' %>

            <!-- Income Threshold Warning (hidden by default) -->
            <div id="income-threshold-warning" class="hidden mb-6 p-4 bg-red-50 border-l-4 border-red-500 text-red-700" data-paper-application-target="incomeThresholdWarning">
              <h3 class="font-medium">Income Exceeds Threshold</h3>
              <p>The applicant's income exceeds the maximum threshold for their household size.</p>
              <p>This application cannot be submitted. Please use the "Send Rejection Notification" button below.</p>
            </div>

            <!-- Guardian Picker Wrapper -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded hidden" data-controller="guardian-picker" data-applicant-type-target="guardianSection">
              <legend class="text-lg font-medium">Guardian Information</legend>

              <!-- Search Pane -->
              <div data-guardian-picker-target="searchPane">
                <div data-controller="admin-user-search"
                     data-admin-user-search-role-value="guardian"
                     data-admin-user-search-guardian-picker-outlet="[data-controller='guardian-picker']">
                  <h3 class="text-base font-medium text-gray-900 mb-2">Find Existing Guardian</h3>
                  <div class="flex items-center gap-4">
                    <div class="flex-grow">
                      <label for="guardian_search_q" class="sr-only">Search by Name or Email</label>
                      <input id="guardian_search_q" placeholder="Search by Name or Email"
                             class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
                             data-action="input->admin-user-search#performSearch"
                             data-admin-user-search-target="searchInput"
                             type="text"
                             name="q">
                    </div>
                    <button type="button" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" data-action="click->admin-user-search#clearSearchAndShowForm">Clear</button>
                  </div>

                  <%= turbo_frame_tag "guardian_search_results", class: "mt-2 space-y-2", target: "_top", "data-admin-user-search-target": "searchResults" do %>
                    <%# serverâ€‘rendered results appear here %>
                  <% end %>

                  <div class="mt-4">
                    <%= link_to "Or Create New Guardian", new_admin_paper_application_path(show_create_guardian_form: true), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                  </div>

                  <!-- New Guardian Form -->
                  <% if @show_create_guardian_form %>
                  <div class="mt-4 p-4 border border-gray-200 rounded bg-gray-50">
                    <h3 class="text-base font-medium text-gray-900 mb-2">Create New Guardian</h3>
                    <%= fields_for :guardian_attributes, @paper_application[:guardian_attributes] do |g| %>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                          <%= g.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :middle_initial, "Middle Initial", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :middle_initial, maxlength: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                      </div>
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                        <div>
                          <%= g.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.date_field :date_of_birth, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :phone_type, "Phone Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
                          <div role="radiogroup" class="space-y-2">
                            <div class="flex items-center">
                              <%= g.radio_button :phone_type, "voice", id: "guardian_phone_type_voice", checked: true,
                                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
                              <%= g.label :phone_type_voice, "Voice", for: "guardian_phone_type_voice", class: "ml-3 text-sm text-gray-700" %>
                            </div>
                            <div class="flex items-center">
                              <%= g.radio_button :phone_type, "videophone", id: "guardian_phone_type_videophone",
                                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
                              <%= g.label :phone_type_videophone, "Videophone", for: "guardian_phone_type_videophone", class: "ml-3 text-sm text-gray-700" %>
                            </div>
                            <div class="flex items-center">
                              <%= g.radio_button :phone_type, "text", id: "guardian_phone_type_text",
                                     class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300" %>
                              <%= g.label :phone_type_text, "Text/SMS", for: "guardian_phone_type_text", class: "ml-3 text-sm text-gray-700" %>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="mt-4">
                        <%= g.label :physical_address_1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
                        <%= g.text_field :physical_address_1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                      </div>
                      <div class="mt-4">
                        <%= g.label :physical_address_2, "Address Line 2", class: "block text-sm font-medium text-gray-700" %>
                        <%= g.text_field :physical_address_2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-4">
                        <div>
                          <%= g.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :state, value: "MD", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <%= g.label :zip_code, "ZIP Code", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.text_field :zip_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                      </div>

                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                        <div>
                          <%= g.label :locale, "Language Preference", class: "block text-sm font-medium text-gray-700" %>
                          <%= g.select :locale, options_for_select([["English","en"],["Spanish","es"],["French","fr"],["Other","other"]], g.object[:locale] || 'en'), { prompt: "Select Language" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                        </div>
                        <div>
                          <label class="block text-sm font-medium text-gray-700">Communication Preference</label>
                          <div class="mt-2 space-y-2 sm:space-y-0 sm:flex sm:space-x-4">
                            <div class="flex items-center">
                              <%= g.radio_button :communication_preference, "email", id: "guardian_communication_preference_email", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
                              <%= g.label :communication_preference_email, "Email", class: "ml-2 text-sm text-gray-700" %>
                            </div>
                            <div class="flex items-center">
                              <%= g.radio_button :communication_preference, "letter", id: "guardian_communication_preference_letter", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
                              <%= g.label :communication_preference_letter, "Letter", class: "ml-2 text-sm text-gray-700" %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% end %>
                    <div class="mt-4 flex justify-between">
                      <%= link_to "Cancel Create", new_admin_paper_application_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                      <button type="button" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" 
                        data-action="click->admin-user-search#createGuardian">
                        Save Guardian
                      </button>
                    </div>
                  </div>
                  <% end %>
                </div>
              </div>

              <!-- Selected Guardian Pane -->
              <div data-guardian-picker-target="selectedPane" class="hidden">
                <div class="mt-4 p-4 border-2 border-green-200 bg-green-50 rounded-md shadow-sm">
                  <div class="flex justify-between items-start">
                    <div class="flex-grow">
                      <h3 class="text-sm font-medium text-gray-800 mb-1">Selected Guardian:</h3>
                      <div data-guardian-picker-target="selectedGuardianDisplay" class="text-sm guardian-details-container"></div>
                    </div>
                    <button type="button"
                            class="text-xs text-gray-500 hover:text-gray-700 ml-2"
                            data-action="guardian-picker#clearSelection">
                      Change Selection
                    </button>
                  </div>
                  <input type="hidden" name="guardian_id" data-guardian-picker-target="guardianIdField">
                </div>
              </div>
            </fieldset>

            <!-- Wrapper for sections shown only for Dependent Application with Guardian Selected -->
            <div class="hidden" data-applicant-type-target="sectionsForDependentWithGuardian">
              <!-- Dependent Information Section (Conditional) -->
              <fieldset id="dependent-info-section" class="mb-6 p-4 border border-gray-200 rounded" data-controller="dependent-fields">
                <legend class="text-lg font-medium">Dependent Information</legend>
                <%= fields_for :dependent_attributes do |d| %>
                <!-- Dependent Basic Information -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                  <div>
                    <%= d.label :first_name, "First Name", class: "block text-sm font-medium text-gray-700" %>
                    <%= d.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { "applicant-type-target": "dependentField" } %>
                  </div>
                  <div>
                    <%= d.label :last_name, "Last Name", class: "block text-sm font-medium text-gray-700" %>
                    <%= d.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { "applicant-type-target": "dependentField" } %>
                  </div>
                </div>
                <div class="mb-4">
                  <%= d.label :date_of_birth, "Date of Birth", class: "block text-sm font-medium text-gray-700" %>
                  <%= d.date_field :date_of_birth, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { "applicant-type-target": "dependentField" } %>
                </div>
                
                <!-- Dependent Contact Information Section -->
                <div class="mb-4">
                  <div class="mb-2">
                    <h3 class="text-base font-medium text-gray-900">Dependent Contact Information</h3>
                    <div class="flex items-center mt-2">
                      <input type="checkbox" id="use_guardian_email" name="use_guardian_email" value="1" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" data-dependent-fields-target="sameEmailCheckbox" data-action="change->dependent-fields#toggleEmailField" checked>
                      <label for="use_guardian_email" class="ml-2 text-sm text-gray-700">Use Guardian's Email</label>
                      <span class="ml-1 text-xs text-gray-500">(Recommended for dependents)</span>
                    </div>
                    <div class="mb-4 hidden" data-dependent-fields-target="emailFields">
                      <%= d.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
                      <%= d.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { "applicant-type-target": "dependentField" } %>
                      <p class="mt-1 text-xs text-gray-500">Enter a unique email only if the dependent needs separate account access</p>
                    </div>
                    <div class="flex items-center mt-2">
                      <input type="checkbox" id="use_guardian_contact" name="use_guardian_address" value="1" class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" data-dependent-fields-target="sameAddressCheckbox" data-action="change->dependent-fields#toggleContactFields" checked>
                      <label for="use_guardian_contact" class="ml-2 text-sm text-gray-700">Use Guardian's Address</label>
                      <span class="ml-1 text-xs text-gray-500">(Recommended for dependents)</span>
                    </div>
                  </div>
                  
                  <div id="dependent-contact-fields" class="hidden" data-dependent-fields-target="addressFields">
                    
                    <!-- Address fields -->
                    <div class="mb-4">
                      <%= d.label :physical_address_1, "Address Line 1", class: "block text-sm font-medium text-gray-700" %>
                      <%= d.text_field :physical_address_1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                    </div>
                    <div class="mb-4">
                      <%= d.label :physical_address_2, "Address Line 2", class: "block text-sm font-medium text-gray-700" %>
                      <%= d.text_field :physical_address_2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                      <div>
                        <%= d.label :city, "City", class: "block text-sm font-medium text-gray-700" %>
                        <%= d.text_field :city, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                      </div>
                      <div>
                        <%= d.label :state, "State", class: "block text-sm font-medium text-gray-700" %>
                        <%= d.text_field :state, value: "MD", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                      </div>
                      <div>
                        <%= d.label :zip_code, "ZIP Code", class: "block text-sm font-medium text-gray-700" %>
                        <%= d.text_field :zip_code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
              <!-- Relationship Type -->
              <div class="mt-4">
                <label for="relationship_type" class="block text-sm font-medium text-gray-700">Relationship to Guardian</label>
                <select id="relationship_type" name="relationship_type" class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" data-dependent-fields-target="relationshipType">
                  <option value="">Select Relationship</option>
                  <option value="Parent">Parent</option>
                  <option value="Legal Guardian">Legal Guardian</option>
                  <%# Add other relevant relationship types %>
                </select>
              </div>
            </fieldset>
            </div> <!-- End of sectionsForDependentWithGuardian wrapper -->

            <!-- Wrapper for common sections shown for Adult OR Dependent with Guardian -->
            <div data-applicant-type-target="commonSections" class="hidden">
              <!-- Application Information Section -->
              <fieldset class="mb-6 p-4 border border-gray-200 rounded">
              <legend class="text-lg font-medium">Application Details</legend>
              <%= fields_for :application do |a| %>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <%= a.label :household_size, "Household Size", class: "block text-sm font-medium text-gray-700" %>
                    <%= a.number_field :household_size, min: 1, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { action: "change->paper-application#validateIncomeThreshold", form_validation_target: "householdSize" } %>
                  </div>
                  <div>
                    <%= a.label :annual_income, "Annual Income", class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1 relative rounded-md shadow-sm">
                      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <span class="text-gray-500 sm:text-sm">$</span>
                      </div>
                      <%= a.number_field :annual_income, step: "0.01", required: true, class: "pl-7 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", data: { action: "change->paper-application#validateIncomeThreshold", form_validation_target: "annualIncome" } %>
                    </div>
                  </div>
                </div>
                <div class="mt-4">
                  <div class="flex items-start">
                    <%= a.check_box :maryland_resident, class: "mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded", required: true %>
                    <%= a.label :maryland_resident, "The applicant has marked that they are a resident of Maryland", class: "ml-2 block text-sm text-gray-700" %>
                    <p class="ml-6 text-xs text-gray-500 mt-1">Note: This will be verified through the residency proof upload/review process</p>
                  </div>
                </div>
              <% end %>
            </fieldset>

            <!-- Disability Information Section -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded">
              <legend class="text-lg font-medium">Disability Information (for the Applicant)</legend>
              <%# Note: These fields apply to the applicant, whether they are the guardian or a dependent %>
              <%= fields_for :applicant_attributes do |app_f| %>
                <div class="flex items-start">
                  <%= app_f.check_box :self_certify_disability, class: "mt-1 h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded", required: true %>
                  <%= app_f.label :self_certify_disability, "The applicant certifies that they have a disability that affects their ability to access telecommunications services", class: "ml-2 block text-sm text-gray-700" %>
                </div>
                <fieldset class="mt-4">
                  <legend class="text-sm font-medium text-gray-700">Select Disabilities</legend>
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-2">
                    <% disabilities = [:hearing, :vision, :speech, :mobility, :cognition] %>
                    <% disabilities.each do |disability| %>
                      <div class="flex items-center">
                        <%= app_f.check_box "#{disability}_disability", class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
                        <%= app_f.label "#{disability}_disability", disability.to_s.titleize, class: "ml-2 text-sm text-gray-700" %>
                      </div>
                    <% end %>
                  </div>
                </fieldset>
              <% end %>
            </fieldset>

            <!-- Medical Provider Information Section -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded">
              <legend class="text-lg font-medium">Medical Provider Information</legend>
              <%= fields_for :application do |a| %>
                <div>
                  <%= a.label :medical_provider_name, "Name", class: "block text-sm font-medium text-gray-700" %>
                  <%= a.text_field :medical_provider_name, required: true, class: "mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                  <div>
                    <%= a.label :medical_provider_phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
                    <%= a.telephone_field :medical_provider_phone, required: true, class: "mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
                  </div>
                  <div>
                    <%= a.label :medical_provider_fax, "Fax (Optional)", class: "block text-sm font-medium text-gray-700" %>
                    <%= a.telephone_field :medical_provider_fax, class: "mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
                  </div>
                </div>
                <div class="mt-4">
                  <%= a.label :medical_provider_email, "Email", class: "block text-sm font-medium text-gray-700" %>
                  <%= a.email_field :medical_provider_email, required: true, class: "mt-1 block w-full px-4 py-2 bg-white border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
                </div>
              <% end %>
            </fieldset>

            <!-- Alternate Contact Section (optional) -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded">
              <legend class="text-lg font-medium">Alternate Contact (optional)</legend>
              <%= fields_for :application do |a| %>
                <div>
                  <%= a.label :alternate_contact_name, "Name", class: "block text-sm font-medium text-gray-700" %>
                  <%= a.text_field :alternate_contact_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                  <div>
                    <%= a.label :alternate_contact_phone, "Phone", class: "block text-sm font-medium text-gray-700" %>
                    <%= a.telephone_field :alternate_contact_phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                  </div>
                  <div>
                    <%= a.label :alternate_contact_email, "Email", class: "block text-sm font-medium text-gray-700" %>
                    <%= a.email_field :alternate_contact_email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
                  </div>
                </div>
              <% end %>
            </fieldset>

            <!-- Proof Upload Section -->
            <fieldset class="mb-6 p-4 border border-gray-200 rounded">
              <legend class="text-lg font-medium">Proof Documents</legend>
              <!-- Income Proof Section -->
              <div class="mb-6" data-controller="document-proof-handler" data-document-proof-handler-type-value="income">
                <h3 class="text-md font-medium mb-2">Income Proof</h3>
                <div class="flex items-center space-x-4 mb-4">
                  <div>
                    <input type="radio" id="accept_income_proof" name="income_proof_action" value="accept" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" checked data-action="change->document-proof-handler#toggleProofAction" data-document-proof-handler-target="acceptRadio">
                    <label for="accept_income_proof" class="ml-2 text-sm text-gray-700">Accept Income Proof and Upload</label>
                  </div>
                  <div>
                    <input type="radio" id="reject_income_proof" name="income_proof_action" value="reject" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" data-action="change->document-proof-handler#toggleProofAction" data-document-proof-handler-target="rejectRadio">
                    <label for="reject_income_proof" class="ml-2 text-sm text-gray-700">Reject Income Proof</label>
                  </div>
                </div>
                <!-- File upload field (shown when Accept is selected) -->
                <div id="income_proof_upload" class="mb-4" data-document-proof-handler-target="uploadSection">
                  <!-- Direct file input control to match constituent portal -->
                  <input type="file" name="income_proof" id="income_proof" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" accept=".pdf,.jpg,.jpeg,.png" data-document-proof-handler-target="fileInput" />
                  <p class="mt-1 text-xs text-gray-500"> Please select a PDF or image file containing income verification </p>
                </div>
                <!-- Rejection reason (shown when Reject is selected) -->
                <div id="income_proof_rejection" class="hidden mb-4" data-document-proof-handler-target="rejectionSection">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Rejection Reason</label>
                  <select name="income_proof_rejection_reason" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" data-document-proof-handler-target="rejectionReasonSelect">
                    <option value="">Select a reason</option>
                    <option value="address_mismatch">Address Mismatch</option>
                    <option value="expired">Expired Documentation</option>
                    <option value="missing_name">Missing Name</option>
                    <option value="wrong_document">Wrong Document Type</option>
                    <option value="missing_amount">Missing Income Amount</option>
                    <option value="exceeds_threshold">Income Exceeds Threshold</option>
                    <option value="outdated_ss_award">Outdated Social Security Award Letter</option>
                    <option value="other">Other</option>
                  </select>
                  <!-- Reason Preview -->
                  <div id="income_proof_reason_preview" class="mt-2 p-3 bg-gray-50 border border-gray-200 rounded-md text-sm text-gray-700 hidden" data-document-proof-handler-target="reasonPreview"></div>
                  <div class="mt-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1"> Notes to Constituent </label>
                    <textarea name="income_proof_rejection_notes" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" data-document-proof-handler-target="rejectionNotes"></textarea>
                    <p class="mt-1 text-xs text-gray-500"> Review and modify this text as needed to provide clear instructions to the constituent. This message will be included in the notification sent to the applicant. </p>
                  </div>
                </div>
              </div>

              <!-- Residency Proof Section -->
              <div class="mb-6" data-controller="document-proof-handler" data-document-proof-handler-type-value="residency">
                <h3 class="text-md font-medium mb-2">Residency Proof</h3>
                <div class="flex items-center space-x-4 mb-4">
                  <div>
                    <input type="radio" id="accept_residency_proof" name="residency_proof_action" value="accept" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" checked data-action="change->document-proof-handler#toggleProofAction" data-document-proof-handler-target="acceptRadio">
                    <label for="accept_residency_proof" class="ml-2 text-sm text-gray-700">Accept Residency Proof and Upload</label>
                  </div>
                  <div>
                    <input type="radio" id="reject_residency_proof" name="residency_proof_action" value="reject" class="focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" data-action="change->document-proof-handler#toggleProofAction" data-document-proof-handler-target="rejectRadio">
                    <label for="reject_residency_proof" class="ml-2 text-sm text-gray-700">Reject Residency Proof</label>
                  </div>
                </div>
                <!-- File upload field (shown when Accept is selected) -->
                <div id="residency_proof_upload" class="mb-4" data-document-proof-handler-target="uploadSection">
                  <!-- Direct file input control to match constituent portal -->
                  <input type="file" name="residency_proof" id="residency_proof" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" accept=".pdf,.jpg,.jpeg,.png" data-document-proof-handler-target="fileInput" />
                  <p class="mt-1 text-xs text-gray-500"> Please select a PDF or image file verifying Maryland residency </p>
                </div>
                <!-- Rejection reason (shown when Reject is selected) -->
                <div id="residency_proof_rejection" class="hidden mb-4" data-document-proof-handler-target="rejectionSection">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Rejection Reason</label>
                  <select name="residency_proof_rejection_reason" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" data-document-proof-handler-target="rejectionReasonSelect">
                    <option value="">Select a reason</option>
                    <option value="address_mismatch">Address Mismatch</option>
                    <option value="expired">Expired Documentation</option>
                    <option value="missing_name">Missing Name</option>
                    <option value="wrong_document">Wrong Document Type</option>
                    <option value="other">Other</option>
                  </select>
                  <!-- Reason Preview -->
                  <div id="residency_proof_reason_preview" class="mt-2 p-3 bg-gray-50 border border-gray-200 rounded-md text-sm text-gray-700 hidden" data-document-proof-handler-target="reasonPreview"></div>
                  <div class="mt-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1"> Notes to Constituent </label>
                    <textarea name="residency_proof_rejection_notes" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" data-document-proof-handler-target="rejectionNotes"></textarea>
                    <p class="mt-1 text-xs text-gray-500"> Review and modify this text as needed to provide clear instructions to the constituent. This message will be included in the notification sent to the applicant. </p>
                  </div>
                </div>
              </div>
            </fieldset>
            </div> <!-- End of commonSections wrapper -->

            <!-- Form Actions -->
            <div class="flex justify-end space-x-3">
              <%= link_to "Cancel", admin_applications_path, class: "px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
              <%= button_tag "Send Rejection Notification", type: "button", id: "rejection-button", class: "hidden px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700", data: { action: "click->form-validation#openRejectionModal" } %>
              <%= form.submit "Submit Paper Application", id: "submit-button", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700", data: { form_validation_target: "submitButton", paper_application_target: "submitButton" } %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Rejection Modal -->
    <div id="rejection-modal" class="fixed inset-0 hidden" data-form-validation-target="rejectionModal" data-paper-application-target="rejectionModal">
      <div class="fixed inset-0 bg-gray-500 bg-opacity-75"></div>
      <div class="fixed inset-0 flex items-center justify-center">
        <div class="bg-white rounded-lg p-6 max-w-lg w-full">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Send Rejection Notification</h3>
          <%= form_with(url: send_rejection_notification_admin_paper_applications_path, method: :post, local: true) do |form| %>
            <!-- Hidden fields to carry over constituent information -->
            <%= form.hidden_field :first_name %>
            <%= form.hidden_field :last_name %>
            <%= form.hidden_field :email %>
            <%= form.hidden_field :phone %>
            <%= form.hidden_field :household_size %>
            <%= form.hidden_field :annual_income %>
            <div class="mb-4">
              <p class="text-sm text-gray-700">
                A notification will be sent to the applicant informing them that their application was rejected because their income exceeds the maximum threshold for their household size.
              </p>
            </div>
            <div class="mb-4">
              <%= form.label :communication_preference, "Notification Method", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <div class="mt-1">
                <div class="flex items-center space-x-4">
                  <div>
                    <%= form.radio_button :communication_preference, "email", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
                    <%= form.label :communication_preference_email, "Email", class: "ml-2 text-sm text-gray-700" %>
                  </div>
                  <div>
                    <%= form.radio_button :communication_preference, "letter", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
                    <%= form.label :communication_preference_letter, "Printed Letter", class: "ml-2 text-sm text-gray-700" %>
                  </div>
                </div>
              </div>
            </div>
            <div class="mb-4">
              <%= form.label :additional_notes, "Additional Notes", class: "block text-sm font-medium text-gray-700 mb-1" %>
              <%= form.text_area :additional_notes, rows: 3, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <div class="flex justify-end space-x-3">
              <button type="button" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" data-action="click->form-validation#closeRejectionModal">
                Cancel
              </button>
              <%= form.submit "Send Notification", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
