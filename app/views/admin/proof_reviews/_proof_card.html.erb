<div class="bg-white overflow-hidden shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-medium text-gray-900">
          <%= proof_type.titleize %> Proof
        </h3>
        <p class="mt-1 text-sm text-gray-500">
          <%= status_message %>
        </p>
      </div>
      <div>
        <% if proof&.attached? %>
          <%= render "shared/status_badge",
            type: :proof,
            status: status,
            label: review_status_label(status),
            classes: "px-2 py-1 rounded-full text-xs" %>
        <% else %>
          <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs">
            Not Uploaded
          </span>
        <% end %>
      </div>
    </div>
    
    <% if proof&.attached? %>
      <div class="mt-4 flex items-center space-x-4">
        <%= link_to url_for(proof), 
            class: "text-sm text-indigo-600 hover:text-indigo-500",
            target: "_blank",
            rel: "noopener" do %>
          <%= proof_file_icon(proof) %>
          <span class="ml-1">View Proof</span>
        <% end %>

        <% if status == "not_reviewed" %>
          <%= link_to new_admin_application_proof_review_path(application, proof_type: proof_type),
              class: "text-sm text-indigo-600 hover:text-indigo-500" do %>
            <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
            Review Proof
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
