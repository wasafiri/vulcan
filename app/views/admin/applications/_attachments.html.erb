<div class="space-y-4">
  <!-- Income Proof Section -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
      <span class="text-sm text-gray-900">
        Income Proof:
        <span class="px-2 py-1 text-sm font-medium rounded-full <%= badge_class_for(:proof, @application.income_proof_status) %>">
          <%= @application.income_proof_status.titleize %>
        </span>
      </span>
    </div>
    <div>
      <% if @application.income_proof.attached? %>
        <% if @application.income_proof_status == "approved" %>
          <%= link_to "View Proof", url_for(@application.income_proof), target: "_blank", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none" %>
        <% else %>
          <button data-controller="modal" data-action="click->modal#open" data-modal-target="incomeProofReviewModal" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
            Review Proof
          </button>
        <% end %>
      <% else %>
        <span class="text-sm text-gray-500">Not Attached</span>
      <% end %>
    </div>
  </div>
  <!-- Residency Proof Section -->
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <svg class="h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>
      <span class="text-sm text-gray-900">
        Residency Proof:
        <span class="px-2 py-1 text-sm font-medium rounded-full <%= badge_class_for(:proof, @application.residency_proof_status) %>">
          <%= @application.residency_proof_status.titleize %>
        </span>
      </span>
    </div>
    <div>
      <% if @application.residency_proof.attached? %>
        <% if @application.residency_proof_status == "approved" %>
          <%= link_to "View Proof", url_for(@application.residency_proof), target: "_blank", class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none" %>
        <% else %>
          <button data-controller="modal" data-action="click->modal#open" data-modal-target="residencyProofReviewModal" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
            Review Proof
          </button>
        <% end %>
      <% else %>
        <span class="text-sm text-gray-500">Not Attached</span>
      <% end %>
    </div>
  </div>
</div>
