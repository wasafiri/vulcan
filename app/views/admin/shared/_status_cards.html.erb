<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <!-- YTD Constituents -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Constituents YTD</h3>
    <p class="text-3xl font-bold text-indigo-600" aria-live="polite"><%= @ytd_constituents_count || 0 %></p>
    <p class="text-sm text-gray-500">Since July 1st, <%= @current_fiscal_year %></p>
    <div class="mt-2 space-y-2">
      <%= link_to constituents_admin_users_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "View all nonactive constituents" } do %>
        View All Nonactive Constituents
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Active Applications Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">In Progress Applications</h3>
    <p class="text-3xl font-bold text-indigo-600" aria-live="polite"><%= @open_applications_count || 0 %></p>
    <p class="text-sm text-gray-500">Active but unapproved</p>
    <div class="mt-2 space-y-2">
      <%= link_to params[:filter] == 'in_progress' ? admin_applications_path : admin_applications_path(filter: 'in_progress'),
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <%= params[:filter] == 'in_progress' ? 'View All Applications' : 'View Only In Progress' %>
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Approved Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Approved</h3>
    <p class="text-3xl font-bold text-indigo-600" aria-live="polite"><%= @pending_services_count || 0 %></p>
    <p class="text-sm text-gray-500">Approved and awaiting services</p>
    <div class="mt-2 space-y-2">
      <%= link_to params[:filter] == 'approved' ? admin_applications_path : admin_applications_path(filter: 'approved'),
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <%= params[:filter] == 'approved' ? 'View All Applications' : 'View Only Approved' %>
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Administration -->
  <div class="bg-white rounded-lg shadow p-6">
    <h3 class="text-lg font-medium text-gray-900">Administration</h3>
    <p class="text-3xl font-bold text-indigo-600" aria-live="polite"><%= @total_users_count || 0 %></p>
    <div class="mt-2 space-y-2">
      <%= link_to admin_users_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "Manage system users" } do %>
        Manage Users
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>

      <%= link_to admin_policies_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "Edit system policies and settings" } do %>
        Edit Policies
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>

      <%= link_to admin_products_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "Manage products catalog" } do %>
        Manage Products
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>

      <%= link_to admin_vouchers_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "View all vouchers in the system" } do %>
        All Vouchers
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>

      <%= link_to new_admin_paper_application_path,
          class: "block inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500",
          aria: { label: "Upload a paper application" } do %>
        Upload Paper Application
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      <% end %>
      
      <button type="button"
          class="block w-full text-left inline-flex items-center text-sm font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          aria-label="View system reports and analytics"
          id="system-reports-link"
          data-action="reports-toggle#toggle"
          data-reports-toggle-target="button"
          data-original-text="System Reports">
        <span>System Reports</span>
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>
  </div>
</div>
