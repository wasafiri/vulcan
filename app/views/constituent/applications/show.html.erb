<main class="container mx-auto px-4 py-8">
  <div class="bg-white shadow rounded-lg p-6">
    <h1 class="text-2xl font-bold mb-4">Application #<%= @application.id %></h1>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Application Details</h2>
      <p><strong>Application Type:</strong> <%= @application.application_type.titleize %></p>
      <p><strong>Submission Method:</strong> <%= @application.submission_method.titleize %></p>
      <p><strong>Status:</strong> <%= @application.status.titleize %></p>
      <p><strong>Application Date:</strong> <%= @application.application_date.strftime("%B %d, %Y") %></p>
      <p><strong>Household Size:</strong> <%= @application.household_size %></p>
      <p><strong>Annual Income:</strong> <%= number_to_currency(@application.annual_income) %></p>
      <p><strong>Income Verification Status:</strong> <%= @application.income_verification_status.titleize %></p>
      <p><strong>Income Verified At:</strong> <%= @application.income_verified_at.strftime("%B %d, %Y") if @application.income_verified_at %></p>
      <p><strong>Income Verified By:</strong> <%= @application.income_verified_by.full_name if @application.income_verified_by %></p>
      <p><strong>Income Details:</strong> <%= @application.income_details %></p>
      <p><strong>Residency Details:</strong> <%= @application.residency_details %></p>
      <p><strong>Current Step:</strong> <%= @application.current_step.titleize %></p>
      <p><strong>Received At:</strong> <%= @application.received_at.strftime("%B %d, %Y") %></p>
      <p><strong>Last Activity At:</strong> <%= @application.last_activity_at.strftime("%B %d, %Y") %></p>
      <p><strong>Review Count:</strong> <%= @application.review_count %></p>
      <p><strong>Medical Provider:</strong> <%= @application.medical_provider.full_name if @application.medical_provider %></p>
    </div>

    <div class="mb-4">
      <h2 class="text-xl font-semibold mb-2">Actions</h2>
      <%= link_to 'Edit Application', edit_constituent_application_path(@application), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to 'Back to Dashboard', constituent_dashboard_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 ml-2" %>
    </div>
  </div>
</main>