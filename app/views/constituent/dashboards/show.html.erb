<!-- app/views/constituent/dashboard/show.html.erb -->
<div class="min-h-screen bg-gray-100">
  <div class="py-10">
    <header>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold leading-tight text-gray-900">My Dashboard</h1>
      </div>
    </header>

    <main>
      <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
        <!-- Status Overview -->
        <div class="bg-white shadow overflow-hidden sm:rounded-lg p-6 mb-6">
          <div class="px-4 py-5 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Application Status</h3>
            
            <% if @draft_application = current_user.applications.draft.first %>
              <div class="mt-4 flex items-center">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Draft
                </span>
                <span class="ml-4 text-sm text-gray-600">
                  Started: <%= @draft_application.created_at.strftime("%B %d, %Y") %>
                </span>
              </div>
              <%= link_to "Continue Unsubmitted Application", edit_constituent_application_path(@draft_application), 
                  class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            
            <% elsif @active_application = current_user.active_application %>
              <div class="mt-4 flex items-center">
                <%= render "shared/status_badge",
                  type: :application,
                  status: @active_application.status,
                  label: @active_application.status.titleize,
                  classes: "px-2 inline-flex text-xs leading-5 font-semibold rounded-full" %>
                  
                <span class="ml-4 text-sm text-gray-600">
                  Submitted: <%= @active_application.application_date.strftime("%B %d, %Y") %>
                </span>
              </div>
              <%= link_to "View Application Details", constituent_application_path(@active_application), 
                  class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200" %>
            
            <% else %>
              <p class="mt-2 text-sm text-gray-600">No active application found.</p>
              <%= link_to "Start New Application", new_constituent_application_path, 
                  class: "mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
            <% end %>
          </div>
        </div>

        <!-- Quick Actions Grid -->
        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
          <!-- Medical Certification Status -->
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Medical Certification</dt>
                    <dd class="flex items-center">
                      <div class="text-lg font-medium text-gray-900">
                        <%= current_user.valid_dcf? ? "Verified" : "Pending" %>
                      </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
              <%= link_to "View Details", constituent_medical_certification_path, class: "text-sm text-indigo-700 hover:text-indigo-900" %>
            </div>
          </div>

          <!-- Upcoming Appointments -->
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">Upcoming Appointments</dt>
                    <dd class="flex items-center">
                      <div class="text-lg font-medium text-gray-900">
                        <%= @upcoming_appointments_count || 0 %>
                      </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
              <%= link_to "View All", constituent_appointments_path, class: "text-sm text-indigo-700 hover:text-indigo-900" %>
            </div>
          </div>

          <!-- Assigned Devices -->
          <div class="bg-white overflow-hidden shadow rounded-lg">
            <div class="p-5">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-5 w-0 flex-1">
                  <dl>
                    <dt class="text-sm font-medium text-gray-500 truncate">My Devices</dt>
                    <dd class="flex items-center">
                      <div class="text-lg font-medium text-gray-900">
                        <%= @devices_count || 0 %>
                      </div>
                    </dd>
                  </dl>
                </div>
              </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
              <%= link_to "View Devices", constituent_devices_path, class: "text-sm text-indigo-700 hover:text-indigo-900" %>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="mt-6 bg-white shadow overflow-hidden sm:rounded-lg">
          <div class="px-4 py-5 border-b border-gray-200 sm:px-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Activity</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <% if @recent_activities.present? %>
              <div class="flow-root">
                <ul role="list" class="-mb-8">
                  <% @recent_activities.each do |activity| %>
                    <li>
                      <div class="relative pb-8">
                        <div class="relative flex space-x-3">
                          <div>
                            <span class="h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white">
                              <!-- Activity icon based on type -->
                            </span>
                          </div>
                          <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
                            <div>
                              <p class="text-sm text-gray-500"><%= activity.description %></p>
                            </div>
                            <div class="text-sm text-gray-500">
                              <time datetime="<%= activity.created_at.iso8601 %>">
                                <%= time_ago_in_words(activity.created_at) %> ago
                              </time>
                            </div>
                          </div>
                        </div>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% else %>
              <p class="text-gray-500 text-sm">No recent activity</p>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
